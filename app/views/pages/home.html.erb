<div class="banner" style="background-image: linear-gradient(135deg, rgba(0,0,0,0.65) 0%,rgba(0,0,0,0) 100%), url(<%= image_path 'banner_home.png'%>);">
  <div class="banner-content">
    <h1>Vinyl Love</h1>
    <p>Rent your records today</p>
    <a class="btn btn-primary btn-lg">Start now</a>
  </div>
</div>

<div class="container">
  <div class="row">
    <% @records.each do |record| %>
      <div class="col-xs-12 col-sm-4">
        <div class="card" style="background-image: url(<%= image_path 'dsotm.jpg' %>);">
          <h2><%= record.title %></h2>
          <p><%= record.year %></p>
          <p><%= record.price %></p>
        </div>
      </div>
    <% end %>
  </div>
</div>
