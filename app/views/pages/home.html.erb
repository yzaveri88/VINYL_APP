<div class="banner" style="background-image: linear-gradient(135deg, rgba(0,0,0,0.65) 0%,rgba(0,0,0,0) 100%), url(<%= image_path 'banner_home.png'%>);">
  <div class="banner-content">
    <h1>Vinyl Love</h1>
    <p>Rent your records today</p>

    <div class="wrap">
     <div class="search">
      <input type="text" class="searchTerm" placeholder="Start looking now">

      <a  href="https://vinyl-yzaveri88.herokuapp.com/records" type="submit" class="btn btn-default searchButton"><i class="fa fa-search"></i></a>
    </button>
  </div>
</div>
</div>
</div>

<div style="text-align:left"><h4>The top rented records are</h4></div>

<div class="container">
  <div class="row">
    <h4></h4>
    <% @records.each do |record| %>
    <div class="col-xs-12 col-sm-4">
      <div class="card" style="background-image: url(<%= image_path 'dsotm.jpg' %>);">
        <h2><%= link_to record.title, record_path(record) %></h2>
        <p><%= record.year %></p>
        <p><%= record.price %></p>
      </div>
    </div>
    <% end %>
  </div>
</div>







